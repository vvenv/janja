{
  "name": "jianjia",
  "version": "0.0.0",
  "private": true,
  "packageManager": "yarn@4.9.2",
  "description": "A simple, fast, lightweight, and extensible template engine for Node.js and browsers.",
  "license": "MIT",
  "workspaces": [
    "benchmark",
    "playground",
    "packages/*"
  ],
  "scripts": {
    "build:e": "yarn workspace @jj/expression run build",
    "build:t": "yarn workspace @jj/template run build",
    "build:u": "yarn workspace @jj/utils run build",
    "build": "yarn build:u && yarn build:e && yarn build:t",
    "dev": "vitest watch",
    "test": "vitest",
    "repl": "yarn workspace playground run start",
    "perf": "yarn workspace benchmark run start",
    "lint": "oxlint && eslint . --ext .ts",
    "prepare": "husky"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^5.4.1",
    "@types/node": "^24.6.2",
    "@vitest/coverage-v8": "3.2.4",
    "@vitest/ui": "3.2.4",
    "eslint": "^9.36.0",
    "husky": "^9.1.7",
    "oxlint": "^1.19.0",
    "typescript": "^5.9.3",
    "vite": "^7.1.11",
    "vitest": "^3.2.4"
  }
}
