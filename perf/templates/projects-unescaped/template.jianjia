<html>
  <head>
    <title>{{= title }}</title>
  </head>
  <body>
    <p>{{= text }}</p>
    {{ if projects.length }}
      {{ for (url, name, description) of projects }}
        <a href="{{= url }}">{{= name }}</a>
        <p>{{= description }}</p>
      {{ endfor }}
    {{ else }}
      No projects
    {{ endif }}
  </body>
</html>
